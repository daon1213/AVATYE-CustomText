<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customTextContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <com.daon.customtext.CustomText
        android:id="@+id/customText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:maintextSize="7sp"
        app:subtextSize="6sp"
        app:maintextStyle="bold"
        app:subtextStyle="normal"
        app:textColor="@color/black"
        app:textFont="@font/taebaekmilkyway" />

    <com.daon.customtext.CustomText
        android:id="@+id/customText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:maintextSize="7sp"
        app:subtextSize="6sp"
        app:maintextStyle="bold"
        app:subtextStyle="normal"
        app:textColor="@color/blue"
        app:textFont="@font/taebaekmilkyway" />

    <com.daon.customtext.CustomText
        android:id="@+id/customText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:maintextSize="7sp"
        app:subtextSize="6sp"
        app:maintextStyle="bold"
        app:subtextStyle="normal"
        app:textColor="@color/purple"
        app:textFont="@font/taebaekmilkyway" />

</LinearLayout>
